# FlexApp Reviews API Environment Configuration
# Do not commit real secrets. Provide via local .env or secrets manager.

# === Hostaway API Configuration ===
# Get your API credentials from Hostaway dashboard
HOSTAWAY_ACCOUNT_ID=61148
HOSTAWAY_API_KEY=__PUT_KEY_HERE__
HOSTAWAY_BASE_URL=https://api.hostaway.com/v1
HOSTAWAY_TIMEOUT=30000
HOSTAWAY_RETRIES=3
HOSTAWAY_MOCK_MODE=false

# === Database Configuration ===
DATABASE_URL=postgresql://username:password@localhost:5432/flexapp

# === Cache Configuration ===
# TTL in seconds, will be bounded to [120,300] (2-5 minutes)
CACHE_DEFAULT_TTL=300
CACHE_PREFIX=reviews
REDIS_URL=redis://localhost:6379

# === Server Configuration ===
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# === CORS Configuration ===
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
FRONTEND_URL=http://localhost:3000

# === Rate Limiting ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# === Development Settings ===
MOCK_LATENCY_MS=500
LOG_LEVEL=info

# === Testing Configuration ===
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6380
